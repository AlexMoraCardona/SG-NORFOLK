<div class="container col-11 card p-5">
    <br>
    <%= form_with model: @analyst do |form| %>
        <% @analyst.errors.full_messages.each do |error| %>
            <div class="alert alert-danger" role="alert">
                <%= error%> <%= alert %>
            </div>
        <% end %>    
        <div class="form-group">  
            <div class="col-sm-11">  
                <%= form.label :name, style: "display: block" %>
                <%= form.text_field :name,  class: "form-control", required: true %>
            </div>
        </div>
        <br>
        <div class="row g-2">
            <div class="col-sm-5">
                <%= form.label :document,  style: "display: block" %>
                <%= form.text_field :document,  class: "form-control" %>
            </div>
            <div class="col-sm-6">
                <%= form.label :email,  style: "display: block" %>
                <%= form.email_field :email,  class: "form-control" %>
            </div>
        </div>        
        <br>
        <div class="row g-2">
            <div class="col-sm-5">
                <%= form.label :cellular,  style: "display: block" %>
                <%= form.text_field :cellular,  class: "form-control" %>
            </div>
            <div class="col-sm-6">
                <%= form.label :country,  style: "display: block" %>
                <%= form.text_field :country,  class: "form-control" %>
            </div>
        </div>        
        <br>    
        <button type="submit" class="btn btn-sm btn-primary"><%=t('common.submit')%></button>
        <%= link_to '<button class="btn btn-sm btn-primary" type="button">Retornar</button>'.html_safe, analysts_path %>

    <% end %>
</div>        
 <br>